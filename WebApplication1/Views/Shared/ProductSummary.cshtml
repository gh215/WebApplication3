@model WebApplication1.Models.Product

<div class="card card-outline-primary m-1 p-1">
    <h4>
        @Model.Name
        <span class="badge bg-primary" style="float:right">
            @Model.Price.ToString("c")
        </span>
    </h4>

    @using (Html.BeginForm("AddToCart", "Cart"))
    {
        <div style="float:right">
            <input id="ProductID" name="ProductID" type="hidden" value="@Model.ProductID" />
            <input id="returnUrl" name="returnUrl" type="hidden"
                   value="@Request.Url.PathAndQuery" />
            <input type="submit" class="btn btn-success" value="Add to cart" />
        </div>
        <span class="card-text p-1"> @Model.Description</span>
    }
</div>



