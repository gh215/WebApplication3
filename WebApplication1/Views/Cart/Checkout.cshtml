@model WebApplication1.Models.ShippingDetails

@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Check out now</h2>
<p>Please enter your details, and we'll ship your goods right away!</p>
@using (Html.BeginForm())
{
    <h3>Ship to</h3>
    <div class="form-group">
        <label>Name:</label>
        <input id="Name" name="Name" type="text" class="col-12 form-control" />
    </div>
    <h3>Address</h3>
    <div class="form-group">
        <label>Line 1:</label>
        <input id="Line1" name="Line1" type="text" value="" class="form-control" />
    </div>
    <div class="form-group">
        <label>Line 2:</label>
        <input id="Line2" name="Line2" type="text" value="" class="form-control" />
    </div>
    <div class="form-group">
        <label>Line 3:</label>
        <input id="Line3" name="Line3" type="text" value="" class="form-control" />
    </div>
    <div class="form-group">
        <label>City:</label>
        <input id="City" name="City" type="text" value="" class="form-control" />
    </div>
    <div class="form-group">
        <label>State:</label>
        <input id="State" name="State" type="text" value="" class="form-control" />
    </div>
    <div class="form-group">
        <label>Zip:</label>
        <input id="Zip" name="Zip" type="text" value="" class="form-control" />
    </div>
    <div class="form-group">
        <label>Country:</label>
        <input id="Country" name="Country" type="text" value="" class="form-control" />
    </div>
    <h3>Options</h3>
    <div class="checkbox">
        <label>
            <input id="GiftWrap" name="GiftWrap" type="checkbox">
            Gift wrap these items
        </label>
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Complete order" />
    </div>
}


